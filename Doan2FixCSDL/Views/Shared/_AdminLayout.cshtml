@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Yummy Hub</title>
    <link href="~/Content/Css/Layout.css" rel="stylesheet" />
    <link href="~/Content/Icon/fontawesome-free-6.6.0-web/css/all.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Nunito:wght@300;400;600&family=Quicksand:wght@300;400;600&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

</head>
<body>
    <div class="container-fluid">
        <div class="row" >
            <nav  class="col-md-3 col-lg-2 d-md-block bg-light sidebar" >
                <div class="sidebar-sticky"style="width:250px;">
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link active" href="@Url.Action("AdminDashboard", "Admin")">
                                <i class="fas fa-tachometer-alt"></i> Dashboard
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("ManageUsers", "Admin")">
                                <i class="fas fa-users"></i> Quản lý người dùng
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("ManageRecipes", "Admin")">
                                <i class="fas fa-utensils"></i> Quản lý công thức
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("ManageComments", "Admin")">
                                <i class="fa-regular fa-comment"></i> Quản lý bình luận
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Statistics", "Admin")">
                                <i class="fa-solid fa-chart-simple"></i> Biểu đô thống kê
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("AdminLogout", "Admin")">
                                <i class="fas fa-sign-out-alt"></i> Đăng xuất
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>
            <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4">
                @RenderBody() <!-- Nội dung sẽ được chèn vào đây -->
            </main>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

<style>
    /* Tổng thể */
    body {
        background-color: #e3f2fd; /* Màu nền xanh pastel */
        font-family: 'Nunito', 'Quicksand', sans-serif;
        color: #333333; /* Màu chữ chung */
    }

    /* Sidebar (Header bên trái) */
    .sidebar {
        background-color: #1d3557; /* Xanh đậm */
        color: #000000; /* Màu chữ đổi thành đen */
        min-height: 100vh;
        border-right: 2px solid black;
    }

    .sidebar a.nav-link {
        color: #000000; /* Màu chữ cho liên kết */
        transition: background-color 0.3s ease, color 0.3s ease;
        margin-bottom:30px;
    }

    .sidebar a.nav-link.active,
    .sidebar a.nav-link:hover {
        background-color: #a8dadc; /* Xanh biển nhạt khi hover */
        color: #000000; /* Màu chữ khi hover */
    }

    /* Thẻ Card */
    .card {
        background-color: #ffffff;
        border-radius: 8px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1); /* Hiệu ứng đổ bóng */
        border: none;
    }

    .card h5.card-title {
        font-weight: 600;
    }

    .card .btn {
        border-radius: 5px;
    }

    /* Nút bấm */
    .btn-outline-primary:hover {
        background-color: #007bff;
        color: #ffffff;
    }

    .btn-outline-success:hover {
        background-color: #28a745;
        color: #ffffff;
    }

    .btn-outline-warning:hover {
        background-color: #ffc107;
        color: #ffffff;
    }

    /* Progress bar */
    .progress-bar {
        border-radius: 5px;
    }

    /* Văn bản và nội dung */
    .text-primary {
        color: #007bff !important;
    }

    .text-success {
        color: #28a745 !important;
    }

    .text-warning {
        color: #ffc107 !important;
    }

    .text-muted {
        color: #6c757d !important;
    }

    /* Khoảng cách */
    .mt-4 {
        margin-top: 1.5rem !important;
    }

    .mt-5 {
        margin-top: 3rem !important;
    }

    .mb-3 {
        margin-bottom: 1rem !important;
    }

    .px-4 {
        padding-left: 1.5rem !important;
        padding-right: 1.5rem !important;
    }


</style>
