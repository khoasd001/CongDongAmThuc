@{
    ViewBag.Title = "Đổi mật khẩu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="change-password-container">
    <h2 class="page-title">Đổi mật khẩu</h2>

    @using (Html.BeginForm("ChangePassword", "Dashboard", FormMethod.Post))
    {
        <div class="form-group">
            @Html.Label("Mật khẩu hiện tại")
            <input type="password" name="currentPassword" class="form-control" />
        </div>
        <div class="form-group">
            @Html.Label("Mật khẩu mới")
            <input type="password" name="newPassword" class="form-control" />
        </div>
        if (ViewBag.PasswordError != null)
        {
            <div class="alert alert-danger">@ViewBag.PasswordError</div>
        }
        <button type="submit" class="btn btn-primary">Đổi mật khẩu</button>
    }

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
    }
</div>
<style>
    /* Định dạng cho trang ChangePassword */
    .change-password-container {
        max-width: 500px;
        margin: 0 auto;
        padding: 20px;
        background-color: #fff;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        border-radius: 8px;
        text-align: center;
    }

    .page-title {
        font-family: 'Quicksand', sans-serif;
        font-size: 2rem;
        color: #ff7043;
        text-align: center;
        margin-bottom: 20px;
    }

    .form-group {
        margin-bottom: 20px;
        text-align: left;
    }

        .form-group label {
            font-weight: bold;
            color: #333;
        }

    .form-control {
        border-radius: 8px;
        padding: 5px;
        font-size: 1rem;
        border: 1px solid #ccc;
        width: 100%;
    }

    button.btn {
        display: block;
        width: 100%;
        padding: 12px;
        border-radius: 8px;
        font-size: 1rem;
        font-weight: bold;
        transition: background-color 0.3s, transform 0.3s;
        margin-top: 20px;
    }

    button.btn-primary {
        background-color: #ff7043;
        color: #fff;
        border: none;
    }

        button.btn-primary:hover {
            background-color: #ff8c00;
            transform: scale(1.05);
        }

    .alert {
        padding: 10px;
        margin-top: 20px;
        border-radius: 8px;
        text-align: center;
        font-size: 1rem;
    }

    .alert-danger {
        background-color: #f44336;
        color: #fff;
    }

    .alert-success {
        background-color: #4caf50;
        color: #fff;
    }

</style>