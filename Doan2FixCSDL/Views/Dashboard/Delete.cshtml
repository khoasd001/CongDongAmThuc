@model Doan2FixCSDL.Models.Recipe

@{
    ViewBag.Title = "Xóa công thức";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .post-card {
        max-width: 600px;
        margin: auto;
        background-color: #f9f9f9;
        padding: 30px;
    }

    .text-danger {
        color: #dc3545;
    }

    .text-warning {
        color: #ffc107;
    }

    .text-primary {
        color: #007bff;
    }

    button.btn {
        width: 150px;
    }

    h2.dashboard-header {
        font-size: 2rem;
        color: #dc3545;
    }
</style>
<!-- Link to Bootstrap -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="~/Content/Css/DashboadUser.css" rel="stylesheet" />
<link href="~/Content/Css/Dashboard.css" rel="stylesheet" />

<h2 class="text-center mt-5 mb-4 display-6 text-danger">Xóa công thức</h2>

<div class="container post-card p-4 shadow-sm bg-light rounded">
    <div class="text-center">
        <h3 class="mb-4 text-warning">Bạn có chắc chắn muốn xóa công thức này?</h3>
        <h4 class="mb-3 text-primary">@Model.Title</h4>
        <p class="mb-4">@Model.MoTa</p>

        @using (Html.BeginForm("Delete", "Dashboard", FormMethod.Post))
        {
            @Html.HiddenFor(model => model.RecipeID)

            <button type="submit" class="btn btn-danger btn-lg me-2">Xóa</button>
            @Html.ActionLink("Hủy", "Index", null, new { @class = "btn btn-secondary btn-lg" })
        }
    </div>
</div>
