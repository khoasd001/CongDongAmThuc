@model IPagedList<Doan2FixCSDL.Models.Recipe>
@using PagedList.Mvc;
@using PagedList;


@{
    ViewBag.Title = "Danh sách công thức";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Danh sách các công thức</h2>

<div class="recipe-list-container">
    <div class="recipe-list">
        @if (Model != null && Model.Any())
        {
            foreach (var recipe in Model)
            {
                <a href="@Url.Action("Details", "Recipes", new { id = recipe.RecipeID })" class="recipe-item" data-category="@recipe.CategoryID">
                    <img src="~/Uploads/MainImages/@recipe.HinhAnh" alt="@recipe.Title" class="recipe-image" />
                    <div class="recipe-content">
                        <h3>@recipe.Title</h3>
                        <p>@recipe.MoTa</p>
                    </div>
                </a>
            }
        }
        else
        {
            <p>Không tìm thấy công thức nào.</p>
        }
    </div>

    <div class="category-filter">
        <h4>Danh mục</h4>
        <form id="categoryFilterForm">
            <label>
                <input type="radio" name="category" value="all" checked> Tất cả
            </label>
            @if (ViewBag.Categories != null && ViewBag.Categories.Count > 0)
            {
                foreach (var category in ViewBag.Categories)
                {
                    <label>
                        <input type="radio" name="category" value="@category.CategoryID"> @category.CategoryName
                    </label>
                }
            }
            else
            {
                <p>Không có danh mục nào để hiển thị.</p>
            }
        </form>
    </div>
</div>

<div class="pagination-container">
    @Html.PagedListPager(
        Model,
        page => Url.Action("Index", new { page }),
        new PagedListRenderOptions
        {
            DisplayLinkToFirstPage = PagedListDisplayMode.Always,
            DisplayLinkToLastPage = PagedListDisplayMode.Always,
            DisplayLinkToPreviousPage = PagedListDisplayMode.Always,
            DisplayLinkToNextPage = PagedListDisplayMode.Always,
            DisplayLinkToIndividualPages = true,
            MaximumPageNumbersToDisplay = 5
        }
    )
</div>

<style>
    .recipe-list-container {
        display: flex;
        justify-content: center;
        align-items: flex-start;
        gap: 20px;
        padding: 20px;
        padding-left: 17%;
    }

    .recipe-list {
        display: flex;
        flex-direction: column;
        gap: 20px;
        flex: 1;
        max-width: 900px;
        width: 100%;
    }

    .recipe-item {
        display: flex;
        align-items: center;
        width: 700px;
        border: 1px solid #ddd;
        padding: 10px;
        border-radius: 8px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        background-color: #f9f9f9;
        text-decoration: none;
        color: inherit;
        transition: transform 0.2s, box-shadow 0.2s;
    }

        .recipe-item:hover {
            transform: scale(1.02);
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
        }

    .recipe-image {
        width: 150px;
        height: 150px;
        object-fit: cover;
        border-radius: 8px;
        margin-right: 20px;
    }

    .recipe-content {
        flex: 1;
    }

        .recipe-content h3 {
            margin: 0 0 10px;
            font-size: 18px;
            color: #333;
            text-transform: capitalize;
        }

        .recipe-content p {
            margin: 0;
            color: #666;
        }
/*bảng phân loại*/
    .category-filter {
        position: sticky;
        top: 150px;
        width: 250px;
        max-height: 80vh;
        overflow-y: auto;
        background-color: #fff;
        border: 1px solid #ddd;
        padding: 10px;
        border-radius: 8px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        background: linear-gradient(135deg, #f6d365 0%, #fda085 100%);
    }

        .category-filter h4 {
            margin-bottom: 10px;
            color: #333;
        }

        .category-filter label {
            display: block;
            margin-bottom: 5px;
            padding: 5px;
            border-radius: 5px;
            transition: background-color 0.3s;
        }

        .category-filter input[type="radio"] {
            margin-right: 10px;
        }

        .category-filter label:hover {
            background-color: rgba(255, 255, 255, 0.3);
        }

        .category-filter input[type="radio"]:checked + label {
            background-color: rgba(255, 255, 255, 0.6);
            font-weight: bold;
        }

/*phân trang*/
    .pagination-container {
        display: flex;
        justify-content: center;
        align-items: center;
        margin-top: 20px;
        gap: 10px;
    }

        .pagination-container .pagination {
            display: flex;
            gap: 5px;
            list-style: none;
            padding: 0;
            margin: 0;
        }

            .pagination-container .pagination li {
                display: inline-block;
            }

            .pagination-container .pagination a,
            .pagination-container .pagination span {
                display: block;
                padding: 10px 15px;
                background-color: #f9f9f9;
                color: #333;
                border: 1px solid #ddd;
                border-radius: 5px;
                text-decoration: none;
                font-size: 16px;
                transition: background-color 0.3s, transform 0.2s;
            }

                .pagination-container .pagination a:hover,
                .pagination-container .pagination span.active {
                    background-color: #007bff;
                    color: white;
                    transform: scale(1.1);
                }

            .pagination-container .pagination .disabled {
                color: #ccc;
                pointer-events: none;
                background-color: #f1f1f1;
            }

            .pagination-container .pagination .previous,
            .pagination-container .pagination .next {
                font-weight: bold;
            }

            .pagination-container .pagination .first,
            .pagination-container .pagination .last {
                font-size: 14px;
                padding: 10px 12px;
            }
</style>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script>
    $(document).ready(function () {
        $('input[name="category"]').change(function () {
            var selectedCategory = $(this).val();
            if (selectedCategory === "all") {
                $('.recipe-item').show();
            } else {
                $('.recipe-item').hide();
                $('.recipe-item[data-category="' + selectedCategory + '"]').show();
            }
        });
    });
</script>
